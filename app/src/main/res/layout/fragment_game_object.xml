<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="@dimen/abc_action_bar_default_padding_material"
    tools:context="com.markgubatan.loltracker.ui.fragments.GameObjectFragment">

    <ImageView
        android:id="@+id/game_object_image"
        android:layout_width="128dp"
        android:layout_height="128dp" />

    <TextView
        android:id="@+id/game_object_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/game_object_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
